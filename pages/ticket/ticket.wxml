<!--pages/access/access.wxml-->
<import src="../template/template" />
<view class='page'>
  <view class='page__hd'></view>
  <view class='page__bd'>
    <view class="weui-cells__title">开票</view>
      <view class="weui-cells weui-cells_after-title">
        <view class='weui-cell weui-cell_input'>
          <view class='weui-cell__hd'>
            <view class='weui-label'>抬头</view>
          </view>
          <view class='weui-cell__bd'>
            <picker bindchange='pickerChange' range-key="{{'title'}}" value='{{index}}' range='{{ticket}}'>
              <view class='picker'>
                {{ticket[index].title}}
              </view>
            </picker>
          </view>
        </view>
        <view class='weui-cell weui-cell_input'>
          <view class='weui-cell__hd'>
            <view class='weui-label'>识别号</view>
          </view>
          <view class='weui-cell__bd'>
            <input class="weui-input" name='code' placeholder='纳税人识别号' value='{{code}}'></input>
          </view>
        </view>
        <view class='weui-cell weui-cell_input'>
          <view class='weui-cell__hd'>
            <view class='weui-label'>开票金额</view>
          </view>
          <view class='weui-cell__bd'>
            <input class="weui-input" id="amount" type='digit' bindinput="inputContent" name='amount' placeholder=''></input>
          </view>
        </view>
        <view class='weui-cell weui-cell_input'>
          <view class='weui-cell__hd'>
            <view class='weui-label'>开户行</view>
          </view>
          <view class='weui-cell__bd'>
            <input class="weui-input" name='bank' value='{{bank}}' placeholder=''></input>
          </view>
        </view>
        <view class='weui-cell weui-cell_input'>
          <view class='weui-cell__hd'>
            <view class='weui-label'>邮箱</view>
          </view>
          <view class='weui-cell__bd'>
            <input class="weui-input" name='mail' value='{{mail}}' placeholder=''></input>
          </view>
        </view>
        <view class='weui-cell weui-cell_input'>
          <view class='weui-cell__hd'>
            <view class='weui-label'>快递地址</view>
          </view>
          <view class='weui-cell__bd'>
            <input class="weui-input" name='expressAddress' value='{{expressAddress}}' placeholder=''></input>
          </view>
        </view>
        <view class='weui-cell weui-cell_input'>
          <view class='weui-cell__hd'>
            <view class='weui-label'>收件人</view>
          </view>
          <view class='weui-cell__bd'>
            <input class="weui-input" name='addressee' value='{{addressee}}' placeholder=''></input>
          </view>
        </view>
        <view class='weui-cell weui-cell_input'>
          <view class='weui-cell__hd'>
            <view class='weui-label'>联系电话</view>
          </view>
          <view class='weui-cell__bd'>
            <input class="weui-input" name='mobile' value='{{mobile}}' placeholder=''></input>
          </view>
        </view>
        <radio-group bindchange="radioChange" name="type">
          <label class="weui-cell weui-check__label" wx:for="{{radioItems}}" wx:key="index">
            <radio data-id="{{item.key}}" value="{{item.value}}" checked="{{item.checked}}" />
              <view class="weui-cell__bd">{{item.name}}</view>
              <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.checked}}">
                <icon class="weui-icon-radio" type="success_no_circle" size="16"></icon>
              </view>
          </label>
        </radio-group>
        <view class='weui-cell weui-cell'>
          <view class='weui-label'>
            <button class='weui-btn'  size='mini' bindtap='addTitle'>新增抬头</button>
          </view>
        </view>
        <view class="weui-cell weui-cell" wx:for="{{imageTitleArr}}" wx:for-item="item">
          <view class='weui-label'>
            <button class='weui-btn' id='{{item.id}}' size='mini' bindtap='chooseImage'>{{item.title}}</button>
          </view>
          <view class="weui-cell weui-cell">
            <block wx:if="{{item.src != ''}}">
              <image src="{{item.src}}" mode="aspectFill"  bindtap="handleImagePreview"></image>
            </block>
          </view>
        </view>
      </view>
      <view class="section">
        <button class='weui-btn' type='primary' bindtap='upload'>提交</button>
      </view>
      <view class="empty-block"></view>
        <view class="flex fix_nav_wp">
      <block wx:for="{{navData}}">
          <template is="nav" data="{{...item}}"/>
      </block>
  </view> 
  </view>
</view>

