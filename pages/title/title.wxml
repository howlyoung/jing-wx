<!--pages/access/access.wxml-->
<view class='page'>
  <view class='page__hd'></view>
  <view class='page__bd'>
  <form bindsubmit='formSubmit'>
    <view class="weui-cells__title">开票</view>
      <view class="weui-cells weui-cells_after-title">
        <view class='weui-cell weui-cell_input'>
          <view class='weui-cell__hd'>
            <view class='weui-label'>抬头</view>
          </view>
          <view class='weui-cell__bd'>
            <input name='title' class='weui-input' value='{{title}}'></input>
          </view>
        </view>
        <view class='weui-cell weui-cell_input'>
          <view class='weui-cell__hd'>
            <view class='weui-label'>识别号</view>
          </view>
          <view class='weui-cell__bd'>
            <input class="weui-input" name='code' placeholder='纳税人识别号' value='{{code}}'></input>
          </view>
        </view>
        <view class='weui-cell weui-cell_input'>
          <view class='weui-cell__hd'>
            <view class='weui-label'>邮箱</view>
          </view>
          <view class='weui-cell__bd'>
            <input class="weui-input" name='mail' value='{{mail}}' placeholder=''></input>
          </view>
        </view>
        <view class='weui-cell weui-cell_input'>
          <view class='weui-cell__hd'>
            <view class='weui-label'>快递地址</view>
          </view>
          <view class='weui-cell__bd'>
            <input class="weui-input" name='address' value='{{address}}' placeholder=''></input>
          </view>
        </view>
        <view class='weui-cell weui-cell_input'>
          <view class='weui-cell__hd'>
            <view class='weui-label'>收件人</view>
          </view>
          <view class='weui-cell__bd'>
            <input class="weui-input" name='addressee' value='{{addressee}}' placeholder=''></input>
          </view>
        </view>
        <view class='weui-cell weui-cell_input'>
          <view class='weui-cell__hd'>
            <view class='weui-label'>联系电话</view>
          </view>
          <view class='weui-cell__bd'>
            <input class="weui-input" name='mobile' value='{{mobile}}' placeholder=''></input>
          </view>
        </view>
        <view class='weui-cell weui-cell_input'>
          <view class='weui-cell__hd'>
            <view class='weui-label'>开户行</view>
          </view>
          <view class='weui-cell__bd'>
            <input class="weui-input" name='bankCode' value='{{bankCode}}' placeholder=''></input>
          </view>
        </view>         
      </view>
      <view class="section">
        <button class='weui-btn' type='primary' form-type="submit">提交</button>
      </view>
  </form>
  </view>
</view>

