<!--pages/access/access.wxml-->
<view class='page'>
  <view class='page__hd'></view>
  <view class='page__bd'>
    <view class="weui-cells__title">初审表</view>
    <form bindsubmit='formSubmit'>
      <view class="weui-cells weui-cells_after-title">
        <view class='weui-cell weui-cell_input'>
          <view class='weui-cell__hd'>
            <view class='weui-label'>用户名</view>
          </view>
          <view class='weui-cell__bd'>
            <input class="weui-input" name="name" placeholder=''></input>
          </view>
        </view>
        <view class='weui-cell weui-cell_input'>
          <view class='weui-cell__hd'>
            <view class='weui-label'>手机号</view>
          </view>
          <view class='weui-cell__bd'>
            <input class="weui-input" name="mobile" placeholder=''></input>
          </view>
        </view>
        <view class="weui-cell">客户类型</view>
        <radio-group  bindchange="radioChange" name="type">
          <label class="weui-cell weui-check__label" wx:for="{{radioItems}}" wx:key="index">
            <radio data-id="{{item.key}}" value="{{item.value}}" checked="{{item.checked}}" />
              <view class="weui-cell__bd">{{item.name}}</view>
              <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.checked}}">
                <icon class="weui-icon-radio" type="success_no_circle" size="16"></icon>
              </view>
          </label>
        </radio-group>

        <view class='weui-cell'>
          <view class='weui-cell__bd'>
            <textarea class='weui-textarea' name='desc' placeholder='描述' style='height: 3.3em'></textarea>
            <view class='weui-textarea-counter'>50字以内</view>
          </view>
        </view>
        <view class='weui-cell'>
          <view class='weui-cell__bd'>
            <textarea class='weui-textarea' name='solution' placeholder='解决方案' style='height: 3.3em'></textarea>
            <view class='weui-textarea-counter'>50字以内</view>
          </view>
        </view>
        <view class='weui-cell'>
          <view class='weui-cell__bd'>
            <textarea class='weui-textarea' name='business' placeholder='业务' style='height: 3.3em'></textarea>
            <view class='weui-textarea-counter'>50字以内</view>
          </view>
        </view>
        <view class='weui-cell'>
          <view class='weui-cell__bd'>
            <textarea class='weui-textarea' name='relation' placeholder='供需关系' style='height: 3.3em'></textarea>
            <view class='weui-textarea-counter'>50字以内</view>
          </view>
        </view>
      </view>
      <view class="section">
        <button class='weui-btn' type='primary'  form-type='submit'>提交</button>
      </view>
    </form>
  </view>
</view>

